&lt;div class=&quot;page l-header--fixed&quot;&gt;
  {{&gt; organisms-header }}
  &lt;div class=&quot;l-main&quot; role=&quot;main&quot;&gt;

    &lt;div class=&quot;page-title&quot;&gt;
      &lt;h1 class=&quot;page-title__title category-brand__text--knock-out&quot;&gt;{{ author.first-name }} {{ author.last-name }}&lt;/h1&gt;
    &lt;/div&gt;

    &lt;div class=&quot;l-container brenham&quot;&gt;
      {{&gt; molecules-breadcrumbs }}

      {{# emergency }}
        {{&gt; molecules-alert-error }}
      {{/ emergency }}

      &lt;div class=&quot;l-content&quot;&gt;
        &lt;div class=&quot;box-wrapper&quot;&gt;
          &lt;div class=&quot;panel-pane&quot;&gt;
            &lt;h2&gt;Articles Related to {{ author.first-name }} {{ author.last-name }}&lt;/h2&gt;
            {{# latest-news }}
              &lt;div class=&quot;panel-pane&quot;&gt;
                {{&gt; molecules-teaser-article }}
              &lt;/div&gt;
            {{/ latest-news }}
          &lt;/div&gt;
        &lt;/div&gt;
      &lt;/div&gt;&lt;!--end .l-content--&gt;

      &lt;div class=&quot;l-sidebar-first&quot;&gt;
        &lt;div class=&quot;panel-pane&quot;&gt;
          {{&gt; atoms-landscape-4x3}}
          &lt;div class=&quot;box-wrapper&quot;&gt;
            &lt;p&gt;{{{ excerpt.long }}}&lt;/p&gt;
            &lt;h3&gt;Contact {{ author.first-name }}&lt;/h3&gt;
            &lt;ul class=&quot;list--comment&quot;&gt;
              &lt;li&gt;&lt;a href=&quot;{{ url }}&quot;&gt;{{ author.twitter }}&lt;/a&gt;&lt;/li&gt;
              &lt;li&gt;&lt;a href=&quot;{{ url }}&quot;&gt;{{ author.email }}&lt;/a&gt;&lt;/li&gt;
              &lt;li&gt;&lt;a href=&quot;{{ url }}&quot;&gt;{{ author.phone }}&lt;/a&gt;&lt;/li&gt;
            &lt;/ul&gt;
          &lt;/div&gt;
        &lt;/div&gt;
      &lt;/div&gt;&lt;!--end .l-sidebar-second--&gt;

    &lt;/div&gt;
  &lt;/div&gt;&lt;!--End role=main--&gt;
  {{&gt; organisms-footer }}
&lt;/div&gt;